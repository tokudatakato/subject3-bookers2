<%= render 'template/error', book: @user %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <div>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
      </div>
      <div>
        <label for="inputImage">ProfileImage</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div>
        <label for="inputImage">Introduction</label><br>
        <%= f.text_area :introduction, id: "user_introduction" %>
      </div>
      <%= f.submit class: "btn btn-secondary"%>
      <% end %>
    </div>
  </div>
</div>
