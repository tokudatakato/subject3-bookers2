<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'template/head', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1 mt-3">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th class="w-25">image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr class="border-top">
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


