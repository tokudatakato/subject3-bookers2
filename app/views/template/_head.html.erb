      <div class="user_info">
        <h2>User info</h2>
        <div><%= image_tag user.get_profile_image(100,100) %></div>
          <table>
            <thead>
              <tr class="border-top">name</tr>
              <tr><%= user.name %></tr>
            </thead>
            <tbody>
              <td class="border-top">introduction</td>
              <td><%= user.introduction %></td>
            </tbody>
          </table>
      
        <% if user == current_user %>
          <p class="btn"><%= link_to "編集", edit_user_path(user) %></p>
        <% end %>
      </div>
      
      <%= form_with model: book, method: :post do |f| %>
      <div class="create-book">
        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>
    
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
  
      <div class="create-btn"><%= f.submit 'Create book' %></div>
      <% end %>