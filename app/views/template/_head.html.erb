    <div class="row">
      <div class="col-md-3 mt-3">
        <h2>User info</h2>
        <div><%= image_tag user.get_profile_image(100,100) %></div>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th class="border-top">introduction</th>
                <th><%= user.introduction %></th>
              </tr>
            </tbody>
          </table>
      
          <div class="row">
            <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block w-atuo" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
      
          <h2 class="mt-3">New book</h2>
          <%= form_with model: book, method: :post do |f| %>
          <div class="form-group w-auto">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h4>Body</h4>
            <%= f.text_area :body %>
          </div>
          <%= f.submit class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
        

      
      