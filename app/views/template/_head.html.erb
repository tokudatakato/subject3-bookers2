<div class="user_info">
        <h2>User info</h2>
        <%= image_tag user.get_profile_image(100,100) %>
        <div class="user_name_info">
          <p>name</p>
          <%= user.name %>
        </div>
        <div class="user_intro_info">
          <p>introduction</p>
          <%= user.introduction %>
        </div>
      </div>  
      
        <% if user == current_user %>
          <p><%= link_to "編集", edit_user_path(user) %></p>
        <% end %>
      
      <%= form_with model: book, method: :post do |f| %>
      <div class="create-book">
        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>
    
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
  
      <div class="create-btn"><%= f.submit 'Create book' %></div>
      <% end %>