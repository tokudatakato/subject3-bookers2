      <h1 class="border-bottom mt-3 pb-2">Books</h1>
      <table class="w-100">
        <thead>
          <tr class="border-bottom">
            <th class="py-4 w-25"></th>
            <th class="w-25">Title</th>
            <th class="w-auto">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
          <tr class="border-top">
            <td>
              <%= link_to user_path(book.user_id)  do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>