<% if @book.errors.any? %>
<div class="index-error-message">
  <% if @book.errors.count == 1 %>
    <%= @book.errors.count %> error prohibited this obj from being saved:
  <% else %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <% end %>
  
  <ul class="error-list">
    <%= @book.errors.full_messages.each do |message| %>
      <li><% message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<h1>user info</h1>
<h1>New book</h1>

<%= form_with model: @book, method: :post do |f| %>
  <div class="create-book">
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="create-btm"><%= f.submit 'Create book' %></div>
<% end %>

<% @books.each do |book| %>
  <% if book.user_id == current_user.id %>
    <p><%= book.title %></p>
    <p><%= book.body %></p>
  <% end %>
<% end %>
