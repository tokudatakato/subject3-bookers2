<%= render 'template/error', book: @book %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'template/head', book: @book, user: @user %>
      <%= form_with model: @book, method: :post do |f| %>
      <div class="create-book">
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Body</h4>
          <%= f.text_area :body %>
      </div>
    <div class="create-btn"><%= f.submit 'Create book' %></div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <% @books.each do |book| %>
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>
        <p><%= book.title %></p>
        <p><%= book.body %></p>
      <% end %>
    </div>
  </div>
</div>