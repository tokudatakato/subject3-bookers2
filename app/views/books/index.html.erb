<%= render 'template/error', book: @book %>

<%= render 'template/head', book: @book, user: @user %>

<%= form_with model: @book, method: :post do |f| %>
  <div class="create-book">
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="create-btn"><%= f.submit 'Create book' %></div>
<% end %>

<% @books.each do |book| %>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
<% end %>

<!--usersでユーザーだけの投稿を表示させる-->
<% @books.each do |book| %>
  <% if book.user_id == current_user.id %>
    <p><%= book.title %></p>
    <p><%= book.body %></p>
  <% end %>
<% end %>
