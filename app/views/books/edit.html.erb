<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <div class="edit-book">
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="update-btn"><%= f.submit 'Update book' %></div>
<% end %>

<div class="link-box">
  <%= link_to('Show', book_path(@book.id), {class: "action-link"}) %>
  <span>|</span>
  <%= link_to('Back', books_path, {class: "action-link"}) %>
</div>