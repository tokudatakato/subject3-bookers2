<%= render 'template/error', book: @book %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 mt-3 mx-auto px-sm-0">
      <h1>Editing Book</h1>

      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
      <div class="edit-book">
        <p>Title</p>
        <%= f.text_field :title %>
    
        <p class="mt-3">Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit class: "btn btn-success" %>
      <% end %>

      <div class="link-box">
        <%= link_to('Show', book_path(@book.id), {class: "action-link"}) %>
        <span>|</span>
        <%= link_to('Back', books_path, {class: "action-link"}) %>
      </div>
    </div>
  </div>
</div>

