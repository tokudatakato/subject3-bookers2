<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <a><%= image_tag 'no_image.jpg' %><br>
        <%= @book.user.name %></a>
      </td>
      <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to("Edit", edit_book_path(@book.id), {class: "btn"}) %></td>
        <td><%= link_to("Destroy", book_path(@book.id), {method: :delete, "deta-confirm" => "本当に削除しますか？", class: "btn"}) %></td>
      <% end %>
    </tr>
  </tbody>
</table>


